<?xml version="1.0" encoding="UTF-8"?>
<addons>
<addon id="plugin.video.spartan" name="Spartan Wizard" version="0.12.0" provider-name="digitalelectronicsprojects.com">
  <requires>
    <import addon="xbmc.python" version="2.1.0"/>
  </requires>
  <extension point="xbmc.python.pluginsource" library="default.py">
        <provides>video executable</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
		<summary lang="en">Knight Wizard</summary>
		<description lang="en">In this wizard you will find the latest Beast and the latest Spartan build</description>
		<disclaimer lang="en">Updates included are the following: DexterTv 1.0.6, A wide variety of Anime sections under Cartoons, updated Genesis and cosmetic issues and small bugs. Visit spartanpixel.net for more info.</disclaimer>
		<forum>http://spartanpixel.net/</forum>
		<source>http://spartanpixel/net/</source>
		<website>https://www.youtube.com/TechTimeruuu</website>
		<platform>all</platform>
	</extension>
</addon>

    <addon id="repository.name" name="Your Addons Name" version="0.1.0" provider-name="Your Name">
        <requires>
            <import addon="xbmc.addon" version="12.0.0"/>
        </requires>
        <extension point="xbmc.addon.repository" name="Your Addons Name">
            <info compressed="false">https://raw.githubusercontent.com/rugito/KnightKodi_repo/addons.xml</info>
            <checksum>https://raw.githubusercontent.com/rugito/KnightKodi_repo/addons.xml.md5</checksum>
            <datadir zip="true">https://raw.githubusercontent.com/rugito/KnightKodi_repo/</datadir>
            <hashes>false</hashes>
        </extension>
        <extension point="xbmc.addon.metadata">
            <summary>A short summary of this addon</summary>
            <description>The description can be longer. Using [CR] you can create a newline. The use of other markup is not advised.</description>
            <platform>all</platform>
    </extension>
</addon>
</addons>
